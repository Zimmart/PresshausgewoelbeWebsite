---
import '../styles/global.css';
import 'aos/dist/aos.css'; // Import AOS styles

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="de">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Urlaub im historischen Presshaus" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-brand-bg antialiased overflow-x-hidden w-full">
		<slot />
		
		<script>
			import AOS from 'aos';
			AOS.init({
				duration: 800,
				once: true,
				offset: 50,
			});
		</script>
	</body>
</html>